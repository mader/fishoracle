<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Fishoracle.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>search</servlet-name>
    <servlet-class>de.unihamburg.zbh.fishoracle.server.SearchImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>search</servlet-name>
    <url-pattern>/fishoracle/Search</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MicroarrayStudyService</servlet-name>
    <servlet-class>de.unihamburg.zbh.fishoracle.server.MicroarrayStudyServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>MicroarrayStudyService</servlet-name>
    <url-pattern>/fishoracle/MicroarrayStudyService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProjectService</servlet-name>
    <servlet-class>de.unihamburg.zbh.fishoracle.server.ProjectServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ProjectService</servlet-name>
    <url-pattern>/fishoracle/ProjectService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>userservice</servlet-name>
    <servlet-class>de.unihamburg.zbh.fishoracle.server.UserServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>userservice</servlet-name>
    <url-pattern>/fishoracle/UserService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>adminservice</servlet-name>
    <servlet-class>de.unihamburg.zbh.fishoracle.server.AdminServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>adminservice</servlet-name>
    <url-pattern>/fishoracle/AdminService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FileUpload</servlet-name>
    <servlet-class>de.unihamburg.zbh.fishoracle.server.FileUploadServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>FileUpload</servlet-name>
    <url-pattern>/fishoracle/FileUpload</url-pattern>
  </servlet-mapping>
  
</web-app>
